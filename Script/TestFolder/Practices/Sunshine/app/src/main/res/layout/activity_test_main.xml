<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.huarui.mobile.sunshine.MainTestActivity">

    <include
        android:id="@+id/mCustomToolbar"
        layout="@layout/toolbar_test" />

    <ImageView
        android:id="@+id/iv_add"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/spinner"
        android:padding="10dp"
        android:src="@drawable/ic_action_add" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/mCustomToolbar"
        android:dropDownWidth="match_parent" />

    <Button
        android:id="@+id/btnPopupWindowTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="弹出窗口1"
        android:layout_below="@+id/iv_add"
        android:layout_alignStart="@+id/btnCloudSettingTest"
        android:layout_marginTop="25dp" />

    <Button
        android:id="@+id/btnPopupWindowTest3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="弹出窗口3"
        android:layout_below="@+id/btnPopupWindowTest"
        android:layout_alignStart="@+id/btnPopupWindowTest" />

    <Button
        android:text="弹出窗口4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnPopupWindowTest3"
        android:layout_alignStart="@+id/btnPopupWindowTest2"
        android:id="@+id/btnPopupWindowTest4" />

    <TextView
        android:id="@+id/txtView_HelloWorld"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Second / Home Activity Started!"
        android:textSize="30sp"
        android:layout_below="@+id/btnPopupWindowTest4"
        android:layout_alignParentStart="true" />

    <Switch
        android:text="Switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch1"
        android:layout_alignBottom="@+id/iv_add"
        android:layout_toEndOf="@+id/iv_add" />

    <Button
        android:id="@+id/btnPopupWindowTest2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="弹出窗口2"
        android:layout_alignBaseline="@+id/btnPopupWindowTest"
        android:layout_alignBottom="@+id/btnPopupWindowTest"
        android:layout_toEndOf="@+id/btnPopupMenuTest" />

    <Button
        android:id="@+id/btnCloudSettingTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TestCloudSetting"
        android:layout_above="@+id/btnPrefactivityTest"
        android:layout_toStartOf="@+id/btnSettingsTest" />

    <Button
        android:id="@+id/btnPopupMenuTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="弹出菜单"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="21dp"
        android:layout_alignStart="@+id/btnPrefactivityTest"
        android:layout_toStartOf="@+id/btnchangeToolbarColor" />

    <Button
        android:id="@+id/btnSettingsTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TestSettingsActivity"
        android:layout_above="@+id/btnPrefactivityTest"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btnchangeToolbarColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ChangeToolbarColor"
        android:layout_above="@+id/btnPopupMenuTest"
        android:layout_toEndOf="@+id/btnPrefactivityTest" />

    <Button
        android:id="@+id/btnPrefactivityTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PreferenceFragment的简单使用"
        android:layout_alignBaseline="@+id/btnchangeToolbarColor"
        android:layout_alignBottom="@+id/btnchangeToolbarColor"
        android:layout_alignStart="@+id/btnCloudSettingTest"
        android:layout_toStartOf="@+id/btnSettingsTest" />
</RelativeLayout>
