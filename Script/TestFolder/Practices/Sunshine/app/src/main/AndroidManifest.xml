<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.huarui.mobile.sunshine">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.NFC" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/AppTheme_Custom">
        <activity android:name=".WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SplashActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".MainSunshineActivity" />
        <activity android:name=".MainSunshineActivityTest" />
        <activity android:name=".DetailActivity" />
        <activity android:name=".MainListView1Activity" />
        <activity android:name=".MainListView2Activity" />
        <activity android:name=".MainListViewJsonActivity" />
        <activity android:name=".MainFragmentActivity" />
        <activity android:name=".MainTestActivity" />
        <activity android:name=".SunshineSettingsActivity" />
        <activity android:name=".CloudSettingsActivity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".PreferenceWithHeaders" />
        <activity android:name=".ToolbarSettingsActivity" />
        <activity android:name=".PopActivity" />
        <activity android:name=".RecipeDetailActivity" />
        <activity android:name=".MainStudentsActivity" />
        <activity android:name=".MainImagesActivity" />
        <activity android:name=".MainCommentsActivity" />
        <activity android:name=".MainContactsActivity" />
        <activity android:name=".MainPersonsActivity" />
        <activity android:name=".LanguageListActivity" />
        <activity android:name=".MainCountryActivity" />
        <activity android:name=".TodosOverviewActivity" />
        <activity
            android:name=".TodoDetailActivity"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity android:name=".FoodSQLiteDemoActivity" />
        <activity android:name=".data.FoodList"
            android:theme="@style/Theme.AppCompat.Light" />

        <provider
            android:name=".data.WeatherProvider"
            android:authorities="com.huarui.mobile.sunshine.WeatherProvider"
            android:enabled="true"
            android:exported="true" />
        <provider
            android:name=".data.StudentsProvider"
            android:authorities="com.huarui.mobile.sunshine.StudentsProvider" />
        <provider
            android:name=".data.ProviderDemo"
            android:authorities="com.huarui.mobile.sunshine.ProviderDemo" />
        <provider
            android:name=".data.ImagesProvider"
            android:authorities="com.huarui.mobile.sunshine.ImagesProvider" />
        <provider
            android:name=".data.TodoContentProvider"
            android:authorities="com.huarui.mobile.sunshine.TodoContentProvider" />
        <provider
            android:name=".data.LanguageContentProvider"
            android:authorities="com.huarui.mobile.sunshine.LanguageContentProvider"
            android:exported="false" />

    </application>

</manifest>