<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lzsoft.lzdata.mobile.purex">
    <!-- com.example.android.persistence -->
    <!-- Add permissions here -->
    <!-- 这条不加将无法显示数据 -->
    <permission android:name="com.example.android.persistencecontentprovider.provider.READ_WRITE"/>

    <!-- the internet permission -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.NFC" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" /> <!-- Include following permission if you want to cache images on SD card -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <uses-feature android:name="android.hardware.location.gps" />

    <application
        android:name="com.example.android.persistence.BasicApp"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppThemeX">

        <activity android:name=".componentlib.Slider.introslider.IntroSliderWelcomeActivity"
            android:theme="@style/Theme.MaterialComponents.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".componentlib.Slider.introslider.IntroSliderHomeActivity"
            android:theme="@style/AppThemeX.NoActionBar" />

        <activity android:name=".componentlib.RecyclerView.fullrecycleview.FullRecyclerViewActivity"
            android:noHistory="true" />


        <activity android:name=".login.fanrunqi.materiallogin.MaterialLoginActivity"
            android:theme="@style/AppTheme_Material_Login"/>
        <activity android:name=".login.fanrunqi.materiallogin.RegisterActivity"
            android:theme="@style/Translucent" />
        <activity android:name=".login.fanrunqi.materiallogin.LoginSuccessActivity"
            android:theme="@style/AppTheme_Material_Login" />

        <activity android:name=".ControlPannel.expandable.instance.ExpandControlPanelActivity" />
        <activity android:name=".ControlPannel.expandable.ControlPanelExpandActivity" />

        <!--Architecture Components Basic Example-->
        <!--Persistence-->
        <activity android:name="com.example.android.persistence.ui.BasicSamplePersistenceActivity" />
        <!--PersistenceContentProviderSample-->
        <activity android:name="com.example.android.persistencecontentprovider.PersistenceContentProviderActivity" />
        <!--BasicRxJavaSample-->
        <activity android:name="com.example.android.observability.ui.UserActivity" />
        <!--BasicRxJavaSampleKotlin-->
        <activity android:name="com.example.android_kotlin.observability.ui.UserActivityKotlin" />
        <!--LiveDataSample-->
        <activity android:name="com.example.android_kotlin.livedatabuilder.LiveDataActivity" />

        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>

        <provider
            android:name="com.example.android.persistencecontentprovider.provider.SampleContentProvider"
            android:authorities="com.example.android.persistencecontentprovider.provider"
            android:exported="true"
            android:permission="com.example.android.persistencecontentprovider.provider.READ_WRITE"/>

    </application>

</manifest>