<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/bottom_bar_bg"
        android:orientation="horizontal" >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:onClick="onActionsButtonClick"
            android:src="@mipmap/ic_menu_moreoverflow_normal_holo_light"
            style="@style/Widget.MaterialComponents.Button"/>

        <View
            android:layout_width="@dimen/divider_size"
            android:layout_height="44dp"
            android:layout_gravity="center_vertical"
            android:background="@color/divider" />

        <Button
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onSourceCodeClick"
            android:text="@string/link_to_sources"
            android:textColor="@color/bottom_bar_text"
            style="@style/Widget.MaterialComponents.Button"/>
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_size"
        android:layout_above="@id/bottomBar"
        android:background="@color/divider" />

    <com.inazaruk.shared.ui.actionscontentview.ActionsContentView
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/actionsContentView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/divider"
        custom:actions_layout="@layout/inazaruk_actionscontentview_actions"
        custom:actions_spacing="@dimen/actions_spacing"
        custom:content_layout="@layout/inazaruk_actionscontentview_content"
        custom:fade_max_value="@integer/default_pref_fade_max_value"
        custom:fade_type="actions"
        custom:fling_duration="@integer/default_pref_fling_delay"
        custom:shadow_drawable="@drawable/inazaruk_actionscontentview_shadow"
        custom:shadow_width="@dimen/default_pref_shadow_width" />

</RelativeLayout>